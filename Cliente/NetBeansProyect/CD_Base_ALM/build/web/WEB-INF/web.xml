<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <description>Usuario de la base de datos</description>
        <param-name>username</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <description>Contrase√±a de la base de datos.</description>
        <param-name>password</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <description>Driver de connexion con la db</description>
        <param-name>driver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <description>Url de conexion a la base de datos</description>
