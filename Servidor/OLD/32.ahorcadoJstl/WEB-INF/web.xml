<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">  	
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>palabrasWebxml</param-name>
		<param-value>servidor,java,nintendo,lluvia,auriculares,enciclopedia,murcielago</param-value>
	</context-param>
	
	<servlet>
		<servlet-name>ComprobarJugador</servlet-name>
		<servlet-class>ComprobarJugador</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ComprobarJugador</servlet-name>
		<url-pattern>/ComprobarJugador</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ComprobarLetra</servlet-name>
		<servlet-class>ComprobarLetra</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ComprobarLetra</servlet-name>
		<url-pattern>/ComprobarLetra</url-pattern>
	</servlet-mapping>
	
</web-app>
